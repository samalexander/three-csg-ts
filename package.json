{
  "name": "three-csg-ts",
  "version": "2.0.0",
  "description": "CSG library for use with THREE.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "lint": "eslint .",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "release": "standard-version",
    "prerelease": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jiro-Digital/three-csg-ts.git"
  },
  "keywords": [
    "three",
    "threejs",
    "three-js",
    "csg",
    "computational-solid-geometry"
  ],
  "author": "Jiro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jiro-Digital/three-csg-ts/issues"
  },
  "homepage": "https://github.com/Jiro-Digital/three-csg-ts#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "standard-version": "^9.0.0",
    "three": "^0.124.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "three": ">= 0.113.0 < 1"
  },
  "files": [
    "lib/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
